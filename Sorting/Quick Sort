//quick
#include<bits/stdc++.h>
using namespace std;

int partition(int arr[], int l, int r)
{
    int pivot = arr[l];
    int i = l;
    int j = r;
    while(i < j)
    {
        do
        {
            i++;
        }while(arr[i] <= pivot);

        do
        {
            j--;
        }while(arr[j] > pivot);

        if(i < j)
        {
            swap(arr[i], arr[j]);
        }
    }
    swap(arr[l], arr[j]);
    return j;
}

void quick_sort(int arr[], int l, int r)
{
    if(l < r)
    {
       int j = partition(arr, l, r);
       quick_sort(arr, l, j);
       quick_sort(arr, j+1, r);
    }

}

int main()
{
    int arr[] = {10, 16, 8, 12, 15, 6, 3, 9, 5};
    // before quick sort
    for(int i = 0; i < 9; i++)
    {
        cout << arr[i] << " ";
    }
    cout << endl;

    quick_sort(arr, 0, 9);

    //after quick sort
    for(int i = 0; i < 9; i++)
    {
        cout << arr[i] << " ";
    }
    cout << endl;
    return 0;
}

//selection
#include<bits/stdc++.h>
using namespace std;

void selection_sort(int arr[], int n)
{
    for(int i = 0; i < n; i++)
    {
        int small_index = i;
        for(int j = i+1; j < n; j++)
        {
           if(arr[small_index] > arr[j])
           {
              small_index = j;
           }
        }
        
        swap(arr[i], arr[small_index]);
    }
}

void print(int arr[], int n)
{
    for(int i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }
    cout << endl;
}

int main()
{
   int n;
    cout << "Enter Array Size: ";
    cin >> n;
    int arr[n];
    
    for (int i = 0; i < n; i++) 
    {
        cin >> arr[i];
    }
    selection_sort(arr, n);
    print(arr, n);
    
}
